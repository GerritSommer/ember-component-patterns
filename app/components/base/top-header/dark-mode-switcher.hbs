<label class="is-sr-only">
  Use
  {{this.nextOption}}
  theme
</label>
<button
  type="button"
  {{on "click" this.setNextMode}}
  title="Use {{this.nextOption}} theme"
>
  {{#if (eq this.darkModeStorage "light")}}
    {{! SUN ICON }}
    <svg width="1em" height="1em" viewBox="0 0 30 30">
      <circle cx="15" cy="15" r="6" fill="currentColor" />

      <line
        id="ray"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        x1="15"
        y1="1"
        x2="15"
        y2="4"
      ></line>

      <use href="#ray" transform="rotate(45 15 15)" />
      <use href="#ray" transform="rotate(90 15 15)" />
      <use href="#ray" transform="rotate(135 15 15)" />
      <use href="#ray" transform="rotate(180 15 15)" />
      <use href="#ray" transform="rotate(225 15 15)" />
      <use href="#ray" transform="rotate(270 15 15)" />
      <use href="#ray" transform="rotate(315 15 15)" />
    </svg>
  {{else if (eq this.darkModeStorage "dark")}}
    {{! MOON ICON }}
    <svg width="1em" height="1em" viewBox="0 0 30 30">
      <path
        fill="currentColor"
        d="
          M 23, 5
          A 12 12 0 1 0 23, 25
          A 12 12 0 0 1 23, 5"
      />
    </svg>

  {{else}}
    {{! AUTO THEME ICON }}
    <svg width="1em" height="1em" viewBox="0 0 100 100">
      <line
        id="ray"
        stroke="currentColor"
        stroke-width="5"
        stroke-linecap="round"
        x1="50"
        y1="1"
        x2="50"
        y2="15"
      ></line>

      <use href="#ray" transform="rotate(180 50 50)" />
      <use href="#ray" transform="rotate(225 50 50)" />
      <use href="#ray" transform="rotate(270 50 50)" />
      <use href="#ray" transform="rotate(315 50 50)" />

      <svg viewBox="0 0 100 100">
        <defs>
          <clipPath id="cut-off-bottom">
            <rect x="50" y="0" width="60" height="100" />
          </clipPath>
        </defs>

        <circle
          cx="50"
          cy="50"
          r="27"
          clip-path="url(#cut-off-bottom)"
          fill="currentColor"
        />
      </svg>
    </svg>

  {{/if}}
</button>